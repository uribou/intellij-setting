<keymap version="1" name="Default copy" parent="$default">
  <action id="EditorDeleteLine">
    <keyboard-shortcut first-keystroke="ctrl y" />
    <keyboard-shortcut first-keystroke="ctrl back_space" />
  </action>
  <action id="EditorDeleteToWordStart" />
  <action id="EditorSelectWord" />
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="ctrl w" second-keystroke="s" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="ctrl w" second-keystroke="v" />
  </action>
</keymap>